<div>
  <h1><%=@event.name%> Event Details</h1>
</div>

<table class="table table-striped">
   <thead>
    <tr>
      <th scope="col">Location</th>
      <th scope="col">Event Date</th>
      <th scope="col">Created By</th>
      
    </tr>
  </thead>
  <tbody>
  
    <tr>
      <td > <%= @event.location %> </td>
      <td > <%= @event.event_date %> </td>
      <td > <%= User.find(@event.creator_id).username%> </td>
  </tbody>
</table>
<% if current_user == @event.creator%>
  <div  class="d-grid gap-2 d-md-flex justify-content-md-end">
    <%= link_to "Edit Event", edit_event_path(@event.id), class: "btn btn-primary"%> 
    <%= button_to "Delete Event", event_path(@event.id), method: :delete, class: "btn btn-danger"%>
  </div>
<%end%>

<table class="table table-striped">
   <thead>
    <tr>
      <th scope="col">Registered to attend:</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <%@event.attendees.each do |attendee|%>
        <td ><%= attendee.username%></td> 
    </tr>
    <%end%>
  </tbody>
</table>

